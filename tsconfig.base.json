{
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./packages",
    "module": "CommonJS",
    "lib": ["ES2019"],
    "target": "ES2019",
    "moduleResolution": "node",
    "importHelpers": true,
    "paths": {
      "*": [
        "packages/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist"
  ]
}